<UserControl x:Class="CPSC_481_Trailexplorers.HikeListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Trailexplorers"
             mc:Ignorable="d"
             Height="768" Width="432"
            >
    <Grid Background="White">
        
        <Image HorizontalAlignment="Left" Height="46" Margin="0,10,0,0" VerticalAlignment="Top" Width="46" Source="Assets/backArrow.png" MouseDown="Back_MouseDown"/>
        <TextBox x:Name="searchBoxInput" DataContextChanged="SearchBoxInput_DataContextChanged" HorizontalAlignment="Left" Height="23" Margin="83,131,0,0" TextWrapping="Wrap" Text="Search for Hikes Here..." VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.034,0.946"/>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Stretch" Height="569" Margin="0,189,0,0" VerticalAlignment="Top" Width="432">
            <StackPanel x:Name="hikeListView" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="Auto" Width="Auto"/>

        </ScrollViewer>
       


    </Grid>
</UserControl>
