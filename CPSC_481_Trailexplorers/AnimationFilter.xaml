            <Image  Opacity="0" x:Name="path" Canvas.ZIndex="2" Source="Assets/path4.png" Height="150" Canvas.Left="105" Width="100" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>

