<UserControl x:Class="CPSC_481_Trailexplorers.AnimationFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Trailexplorers"
             mc:Ignorable="d" d:DesignWidth="435" Height="150">
    <Grid Background="DeepSkyBlue">
        <Canvas Width="300"  Margin="67,0,67.667,0">
            <Polygon x:Name="mountain" Height="150" Points="0,150 65,150 130,150"
        Fill="Blue"
          Canvas.Left="90" Width="130"   >
                <Polygon.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="2"/>
                </Polygon.Effect>
            </Polygon>

        </Canvas>

    </Grid>
</UserControl>
