<UserControl x:Class="CPSC_481_Trailexplorers.FilterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
             xmlns:local="clr-namespace:CPSC_481_Trailexplorers"
             
             mc:Ignorable="d" 
             Height="768" Width="432"
            
    >
    <Grid Background="White" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>

        <!--<Image x:Name="logoImage" Canvas.ZIndex="3" 
               Source="Logos/logoWBold.png" RenderOptions.BitmapScalingMode="Fant" Opacity="1" Margin="108,0,108,152.655" Stretch="UniformToFill"/>
        <Image x:Name="backArrowTop" HorizontalAlignment="Left" Height="46" Margin="0,10,0,0" VerticalAlignment="Top" Width="46" Source="Assets/backArrow.png" MouseDown="Back_MouseDown"/>
        <Image x:Name="backGroundTop" HorizontalAlignment="Left"  Margin="0,53,0,141.655" Width="432" Source="Backgroundimages/trail.png" Stretch="UniformToFill" >
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        -->


        <Label x:Name="pleaseFill" Content="Please fill the following items" Margin="108,214,108,99.655" FontSize="16" HorizontalAlignment="Center">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
            </Label.Effect>
        </Label>
        <Label  x:Name="locationLablel" Content="Hike Location" Margin="153,255,153,61.655" RenderTransformOrigin="0.881,-0.293" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <ComboBox ToolTip="Choose what Province you want to find a Hike in" x:Name="Province" ItemsSource="{Binding ProvinceCollection}" SelectedItem="{Binding SelectedProvince}" DisplayMemberPath="ProvinceName" IsEditable="False" Margin="40,294,229,0" Height="31" IsDropDownOpen="False" IsReadOnly="False" VerticalAlignment="Top" >
            <!--<ComboBoxItem Content="ALBERTA"/>
            <ComboBoxItem Content="BRITISH COLUMBIA"/>
            <ComboBoxItem Content="MANITOBA"/>
            <ComboBoxItem Content="NEW BRUNSWICK"/>
            <ComboBoxItem Content="NEWFOUNDLAND and LABRADOR"/>
            <ComboBoxItem Content="NOVA SCOTIA"/>
            <ComboBoxItem Content="ONTARIO"/>
            <ComboBoxItem Content="PRINCE EDWARD ISLAND"/>
            <ComboBoxItem Content="QUEBEC"/>
            <ComboBoxItem Content="SASCATCHEWAN"/>
            <ComboBoxItem Content="NORTHWEST TERRITORIES"/>
            <ComboBoxItem Content="NUNAVUT"/>
            <ComboBoxItem Content="YUKON"/>-->
        </ComboBox>
        <ComboBox ToolTip="Choose what Federal Park you want to Hike in" x:Name="dropDownPark" ItemsSource="{Binding SelectedProvince.Parks}"  DisplayMemberPath="ParkName" IsEditable="False" Margin="233,294,36,0" Height="31" Background="Black" VerticalAlignment="Top" Loaded="dropDownPark_Loaded" SelectionChanged="dropDownPark_SelectionChanged" >
            <!--<ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="M"/>
            <ComboBoxItem Content="N"/>
            <ComboBoxItem Content="N"/>
            <ComboBoxItem Content="N"/>
            <ComboBoxItem Content="O"/>
            <ComboBoxItem Content="P"/>
            <ComboBoxItem Content="Q"/>
            <ComboBoxItem Content="S"/>
            <ComboBoxItem Content="N"/>
            <ComboBoxItem Content="N"/>
            <ComboBoxItem Content="Y"/>-->
        </ComboBox>


        <Label  x:Name="difficultyLabel" Content="Difficulty" Margin="171,331,171,403" RenderTransformOrigin="0.881,-0.293" FontSize="18" FontWeight="Bold" Grid.RowSpan="2" HorizontalAlignment="Center"/>
        <StackPanel ToolTip="Select your difficulty, this metric is created based on users feedback" x:Name="containerRadio" DataContext="StaticResource Settings" Margin="0,14.345,0,0" VerticalAlignment="Top" Orientation="Horizontal" Grid.Row="1" >
            <RadioButton  x:Name="easyRadio" GroupName="EMH" Content="Easy"   FontSize="16" Margin="50,10,10,10" />
            <RadioButton  x:Name="mediumRadio" GroupName="EMH" Content="Medium"   FontSize="16" Margin="70,10,10,10" />
            <RadioButton  x:Name="hardRadio" GroupName="EMH" Content="Hard"   FontSize="16" Margin="70,10,50,10" />

        </StackPanel>

        <Label  x:Name="timeLablel" Content="Time (Hr)" Margin="171,0,171,322" RenderTransformOrigin="0.881,-0.293" FontSize="18" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Bottom"/>

        <Slider ToolTip="Select how long you want you hike to take (NOTE: based on your selection if no hikes meet your choice the closest Hike to your time will be shown)" x:Name="sliderTime"  Value="{Binding SelectedProvince.SliderCollection }" ValueChanged="SliderTime_ValueChanged"  Margin="80,105.345,80,287" RenderTransformOrigin="-0.069,0.143" Maximum="10" Minimum="0" TickFrequency=".5" TickPlacement="BottomRight"  IsSnapToTickEnabled="True" Grid.Row="1">
            <Slider.Effect>
                <DropShadowEffect ShadowDepth="1"/>
            </Slider.Effect>
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform />
                    <RotateTransform/>
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label x:Name="timeValueLabel" Content="0" Margin="208,130.333,171,0" VerticalAlignment="Top" RenderTransformOrigin="3.148,0.68" FontSize="14" Grid.Row="1"/>
        <Label  x:Name="elevationLabel" Content="Elevation 100ft" Margin="140,148.345,134,235" RenderTransformOrigin="0.881,-0.293" FontSize="18" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center"/>
        <Slider ToolTip="Select the elevation of the hike you want to take (NOTE: based on your selection if no hikes meet your choice the closest Hike to your elevation will be shown)"  x:Name="sliderElevation" ValueChanged="SliderElevation_ValueChanged" Margin="80,187.345,80,205" RenderTransformOrigin="-0.069,0.143" TickFrequency=".5" Maximum="10" Minimum="0" TickPlacement="BottomRight"  IsSnapToTickEnabled="True" Grid.Row="1">
            <Slider.Effect>
                <DropShadowEffect ShadowDepth="1"/>
            </Slider.Effect>
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform />
                    <RotateTransform/>
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label x:Name="elevationValueLabel" Content="0" Margin="208,214.333,171,0" VerticalAlignment="Top" FontSize="14" Grid.Row="1"/>

        <Label  x:Name="distanceLabel" Content="Distance (Km)" Margin="140,240.333,153,143" RenderTransformOrigin="0.881,-0.293" FontSize="18" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center"/>
        <Slider ToolTip="Select the distance of the hike you want to take (NOTE: based on your selection if no hikes meet your choice the closest Hike to your distance will be shown)" x:Name="sliderDistance" ValueChanged="SliderDistance_ValueChanged" Margin="80,279.345,80,113" RenderTransformOrigin="-0.069,0.143" Maximum="10" Minimum="0" TickFrequency=".5" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Grid.Row="1">
            <Slider.Effect>
                <DropShadowEffect ShadowDepth="1"/>
            </Slider.Effect>
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform />
                    <RotateTransform/>
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Button ToolTip="Apply your filter criteria and search for Hikes" x:Name="filterButton" Content="Apply" Margin="148,333.333,153,0" Click="Apply_Filter_Button" FontSize="18" Background="Azure" Height="31" VerticalAlignment="Top" Grid.Row="1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label x:Name="distanceValueLabel" Content="0" Margin="208,304.333,171,0" FontSize="14" Height="29" VerticalAlignment="Top" Grid.Row="1"/>


        <local:AnimationFilter x:Name="animationView" Height="150" Margin="0,46,0,0" VerticalAlignment="Top"/>
        <Image ToolTip="Hit the wrong button?! click me to head back to the Selction page" HorizontalAlignment="Left" Height="46" Margin="376,-5,0,0" VerticalAlignment="Top" Width="46" Source="Assets/homeIcon.png" MouseDown="Image_MouseDown" RenderTransformOrigin="0.667,0.159"/>




    </Grid>
</UserControl>
