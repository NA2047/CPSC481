<UserControl x:Class="CPSC_481_Trailexplorers.LoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CPSC_481_Trailexplorers"
             mc:Ignorable="d" 
             Height="768" Width="432">

    <Grid Background="White">
        <Image Name="logo" Canvas.ZIndex="3" 
               Source="Logos/logoWBold.png" RenderOptions.BitmapScalingMode="Fant" Opacity="1" MouseDown="aPicture_MouseDown" Margin="52,161,53,194"/>
        <Viewbox Stretch="Uniform">
            <Image Canvas.ZIndex="1" x:Name="background" Source="BackgroundImages/newBB.png" Stretch="UniformToFill"  VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Viewbox>


    </Grid>
</UserControl>
